@model My_EShop_2.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "ورود به سایت";
    Layout = "_AccountLayout";
}

<h1 class="mt-3">ورود به سایت</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control mb-2"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control mb-2" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>


            <div class="form-group mt-5">
                <input type="submit" value="ورود" class="btn btn-primary text-white" />
                <a class="btn btn-secondary text-white" onclick="goBack()">بازگشت</a>
            </div>

        </form>
    </div>
</div>
@section Scripts {
    <script>
        function goBack() {
            history.go(-1);
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
